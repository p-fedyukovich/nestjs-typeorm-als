{
  "name": "nestjs-typeorm-als",
  "version": "0.0.0",
  "description": "Decorators for TypeORM based on ALS which simplify work with connections and transactions",
  "main": "dist/index.js",
  "keywords": [
    "nestjs",
    "typeorm",
    "als",
    "async-local-storage",
    "transaction",
    "connection",
    "typescript"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint 'lib/**/*.ts' --fix",
    "test": "jest --runInBand",
    "test:e2e": "jest --config ./tests/jest-e2e.json --runInBand",
    "test:e2e:dev": "jest --config ./tests/jest-e2e.json --runInBand --watch",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p-fedyukovich/nestjs-typeorm-als.git"
  },
  "author": "Pavel Fediukovich <pavel.fedyukovich@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/p-fedyukovich/nestjs-typeorm-als/issues"
  },
  "homepage": "https://github.com/p-fedyukovich/nestjs-typeorm-als#readme",
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-angular": "12.1.4",
    "@nestjs/common": "7.6.18",
    "@types/jest": "26.0.23",
    "@types/node": "12.20.15",
    "@typescript-eslint/eslint-plugin": "4.26.1",
    "@typescript-eslint/parser": "4.26.1",
    "eslint": "7.28.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.4",
    "husky": "6.0.0",
    "jest": "27.0.4",
    "jest-junit": "12.1.0",
    "lint-staged": "11.0.0",
    "prettier": "2.3.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.6.7",
    "ts-jest": "27.0.3",
    "typeorm": "0.2.34",
    "typescript": "4.3.4",
    "uuid": "8.3.2"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "typeorm": ">= 0.2.8"
  }
}
